long Coins (long n)
{
    return (n * (n + 1) / 2);
}
class Solution {
public:
    int arrangeCoins(int n) {
        int s = 1;
        int e = n;
        int mid, ans = 0;
        
        while (s <= e)
        {
            mid = s + (e - s) / 2;
            
            if (Coins (mid) == n)
                return mid;
            
            else if (Coins (mid) > n)
            {
                e = mid - 1;
            }
            else 
            {
                ans = mid;
                s = mid + 1;
            }
        }
        
        return ans;
        
    }
};
