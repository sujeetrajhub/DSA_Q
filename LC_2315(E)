class Solution {
public:
    int countAsterisks(string s) {
        int n= s.length();
        int bar=0;
        int count=0;
        
        if(n==0) return 0;
        for(int i=0;i<n;i++){
            
            if(s[i]=='|'){
                bar++;
            }

        
            if(bar%2==0 && s[i]=='*'){
                    count++;
             } 
        }
        return count;
    }
    
};
