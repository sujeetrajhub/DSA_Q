class Solution {
public:
    string convertToBase7(int num) {
        string res;
        if(num==0) res+='0';
        
        int x=num;
        num=abs(num);
        while(num!=0){
            int last=num%7;
            res+=to_string(last);
            num/=7;
        }
        if(x<0){
            res+='-';
        }
        reverse(res.begin(),res.end());
        return res;
    }
};
