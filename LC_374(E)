class Solution {
public:
    int guessNumber(int n) {
        int low=0;
        int high=n;
        int ans=0;
     
        
        while(low<=high){
            int mid=low+(high-low)/2;
              int x=guess(mid);
            if(x==0){
                ans=mid;
                break;
            }
            if(x==-1){
                high=mid-1;
            }
            if(x==1){
                low=mid+1;
            }
        }
        return ans;
    }
};
