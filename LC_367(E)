class Solution {
public:
    bool isPerfectSquare(int num) {
        if(num==1) return true;
        
        long long l=1,r=num/2,m;
        
        while(l<=r){
           long long m=(l+r)>>1;
            if((m*m)==num) return true;
            if(num< (m*m))  r = m-1;
            else l = m+1;
        }
        return false;
    }
};
