class Solution {
public:
    int cnta=0;
    int cntl=0;
    bool checkRecord(string s) {
        for(int i=0;i<s.size();i++){
            
            if(s[i]=='A') ++cnta;//absent
            
            if(s[i]=='L') ++cntl;//late
            else cntl=0;
            
            
            if(cnta >=2 || cntl>=3) return false;
        }
        
         return true;
    }
};
