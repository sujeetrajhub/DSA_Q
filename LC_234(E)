class Solution {
public:
    bool isPalindrome(ListNode* head) {
        if(!head->next) return true;
        string s;
        
        while(head){
            s+=to_string(head->val);
            head=head->next;
        }
        
        int left=0,right=s.size()-1;
        while(left<right){
            if(s[left]!=s[right]) return false;
            left++,right--;
        }
        return true;
    }
};
