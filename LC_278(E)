class Solution {
public:
    int firstBadVersion(int n) {
        long left=1,mid=0,right=n;
        long badVersion=1;
        while(left<=right){
            mid=(left+right)/2;
            if(isBadVersion(mid)){
                badVersion=mid;
                right=mid-1;
            }
            else
                left=mid+1;
        }
        return badVersion;
    }
};
