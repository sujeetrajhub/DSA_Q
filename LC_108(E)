class Solution {
public:
    
    TreeNode *formTree(vector<int> &nums,int i, int j){
        if(i>j) return NULL;
        
        int mid = i+(j-i)/2;
        TreeNode *root=new TreeNode(nums[mid]);
        
        root->left = formTree(nums,i,mid-1);
        root->right = formTree(nums,mid+1,j);
        
        return root;
    }
    
    TreeNode* sortedArrayToBST(vector<int>& nums) {
        int n=nums.size();
        return formTree(nums,0,n-1);
    }
};
