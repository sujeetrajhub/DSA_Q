class Solution {
public:
    string reverseStr(string s, int k) {
        for(int i=0;i<s.size();i+=2*k){
            if(i+k-1>=s.size()){
                reverse(s,i,s.size()-1);
            }
            else
                reverse(s,i,i+k-1);
        }
        return s;
    }
    
    void reverse(string &s,int l,int r){
        while(l<r){
            swap(s[l++],s[r--]);
        }
    }
};
